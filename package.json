{
	"name": "carbon-nexus",
	"devDependencies": {
		"@biomejs/biome": "^1.9.1",
		"turbo": "^2.1.3",
		"typescript": "^5.4.5"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.1.30",
	"private": true,
	"scripts": {
		"build": "bunx turbo build",
		"dev": "bunx turbo dev",
		"start": "NODE_ENV=production bunx turbo start",
		"test": "bunx turbo test",
		"format": "bunx biome format --write ./*.{json,md,yml} && bunx turbo biome:format",
		"lint": "bunx biome lint --write ./*.{json,md,yml} && bunx turbo biome:lint"
	},
	"workspaces": ["apps/*", "packages/*"]
}
