{
	"name": "backend",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"dev": "bun run --env-file .env.development --watch src/index.ts",
		"build": "bun build src/index.ts --env-file .env.production --outdir dist --minify --target bun --sourcemap=linked --packages external",
		"start": "bun run --env-file .env.production ./dist/index.js",
		"test": "NODE_ENV=test bun test --env-file .env.test --coverage",
		"prisma:resetDb": "dotenv -e .env.test -- prisma db push --force-reset --schema src/db/schema.prisma",
		"biome:format": "bunx biome format --write .",
		"biome:lint": "bunx biome lint --write ./src",
		"prisma:generate": "dotenv -e .env.development -- prisma generate --schema src/db/schema.prisma",
		"prisma:migrate": "dotenv -e .env.development -- prisma migrate dev --schema src/db/schema.prisma",
		"prisma:format": "prisma format --schema src/db/schema.prisma"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.0.3",
		"@nestjs/testing": "^10.4.5",
		"@shared/biome-config": "workspace:*",
		"@shared/common": "workspace:*",
		"@shared/logger": "workspace:*",
		"@types/bun": "latest",
		"@types/cookie-parser": "^1.4.7",
		"@types/express": "^4.17.21",
		"@types/node": "^22.7.5",
		"@types/nodemailer": "^6.4.16",
		"@types/supertest": "^6.0.2",
		"dotenv-cli": "^7.4.2",
		"prisma": "^5.21.0",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"zod": "^3.23.8"
	},
	"peerDependencies": {
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"@nestjs/common": "^10.4.5",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.4.5",
		"@nestjs/platform-express": "^10.4.5",
		"@prisma/client": "^5.21.0",
		"@types/handlebars": "^4.1.0",
		"@types/jest": "^29.5.13",
		"arctic": "^1.9.2",
		"bun": "^1.1.30",
		"cookie-parser": "^1.4.7",
		"express": "^4.21.1",
		"handlebars": "^4.7.8",
		"nodemailer": "^6.9.15"
	}
}
