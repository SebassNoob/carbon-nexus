{
	"name": "backend",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"dev": "bun run --env-file .env.development --watch src/index.ts",
		"build": "bun build src/index.ts --outdir dist --minify --target bun --external @nestjs/microservices --external class-validator --external @nestjs/websockets --external class-transformer",
		"start": "bun run --env-file .env.production ./dist/index.js",
		"biome:format": "bunx @biomejs/biome format --write .",
		"biome:lint": "bunx @biomejs/biome lint --write ./src",
		"prisma:generate": "prisma generate --schema src/db/schema.prisma",
		"prisma:migrate": "prisma migrate dev --schema src/db/schema.prisma",
		"prisma:format": "prisma format --schema src/db/schema.prisma"
	},
	"devDependencies": {
		"@nestjs/testing": "^10.4.3",
		"@shared/biome-config": "workspace:*",
		"@shared/common": "workspace:*",
		"@shared/logger": "workspace:*",
		"@types/bun": "latest",
		"@types/express": "^4.17.21",
		"@types/node": "^22.5.2",
		"jest": "^29.7.0",
		"jest-mock-extended": "^4.0.0-beta1",
		"prisma": "^5.19.0",
		"zod": "^3.23.8"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@lucia-auth/adapter-prisma": "^4.0.1",
		"@nestjs/common": "^10.4.1",
		"@nestjs/core": "^10.4.1",
		"@nestjs/platform-express": "^10.4.1",
		"@prisma/client": "5.19.0",
		"@types/jest": "^29.5.13",
		"express": "^4.21.0",
		"lucia": "^3.2.0",
		"ts-jest": "^29.2.5"
	}
}
